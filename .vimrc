set number "display line numbers
set nobackup "don't create .BAK files
set nowrap  "don't wrap lines
set noswapfile  "don't create a swap file
set mouse=a "enable movement of cursor using mouse pointer
set incsearch   "highlight searched string as you type
set ignorecase  "ignore case on searching
set smartcase   "enable case sensitive search only if upper case letters are present in the search string
set scrolloff=3 "keep the cursor from 3 lines above/below the bottom/top line on screen when scrolling
syntax on   "enable syntax highlighting
set sw=4 sts=4 ts=4 et  "shiftwidth=4, softtabstop=4, tabstop=4, expandtab
set ruler   "show ruler (cursor position w.r.t. row,column on screen)
set showcmd "show command
set autoindent  "keep auto indenting
set backspace=indent,eol,start
set hlsearch    "highlight searched string
set wildmenu    "display a menu when tabbed a command
set wildmode=list:longest,full  "cycle through the menu, longest first
